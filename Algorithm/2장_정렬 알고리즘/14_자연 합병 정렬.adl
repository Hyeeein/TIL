// 입력 배열에서 런을 구하는 makeRun() 함수에 대한 ADL
makeRun(a[], n)
    i <- 1;
    r <- []; // 공백 리스트
    while (i < n) do {
        t <- [];
        리스트 t에 a[i] 추가;
        while (i + 1 < n and a[i] < a[i+1]) do {
            리스트 t에 a[i] 추가;
            i <- i + 1;
        }
        리스트 r에 리스트 t 추가;
        t <- a[i];
    }
    return r;
end makeRun()
